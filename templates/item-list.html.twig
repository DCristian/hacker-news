{% extends "layout.html.twig" %}

{% block content %}
    <table class="table">
        <tbody>
        {% for item in itemList %}
            <tr>
                <td scope="col">{{ startIndex + loop.index }}</td>
                <td scope="col">
                    {% include 'item.html.twig' with {'item': item} %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="mb-4" href="{{ path('homepage') }}?page={{ page + 1 }}">More</a>
    <br>
    <br>
{% endblock %}
