{% extends "layout.html.twig" %}

{% block content %}
    <table class="table">
        <tbody>
        {% for result in results %}
            <tr>
                <td scope="col">{{ loop.index }}</td>
                <td scope="col">
                    <a href="{{ result.url }}" target="_blank">
                        {{ result.title }}
                    </a>
                    {% if result.baseUrl %}({{ result.baseUrl }}){% endif %}
                    <br/>
                    <small>
                        {{ result.score }} points by {{ result.author }}
                        <a href="{{ path('item', {id: result.id}) }}">
                            {{ result.age }} ago
                        </a>
                        <a href="{{ path('item', {id: result.id}) }}">
                            | {% if result.totalComments %} {{ result.totalComments }} comments {% else %} discuss {% endif %}
                        </a>
                    </small>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
